.container.auth
  #login-row.row.justify-content-center.align-items-center
    #login-column.col-md-6
      #login-box.col-md-12.auth-form
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          %h2 Forgot your password?

          .form-group
            = f.label :email
            %br/
            = f.input :email, autofocus: true, autocomplete: "email", label: false, class: "form-control", as: :email
          .action
            = f.submit "Send me reset password instructions", class: "btn btn-primary btn-info btn-md"
          #register-link.text-right
            = render "devise/shared/links"
3